<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="stage" class="ru.tyunikovag.springinaction.springidol.Stage"
          factory-method="createStage">
    </bean>

    <bean id="ticket" class="ru.tyunikovag.springinaction.springidol.Ticket"
          scope="prototype">
        <constructor-arg value="100"/>
    </bean>

    <bean id="duke" class="ru.tyunikovag.springinaction.springidol.Juggler">
        <constructor-arg value="15"/>
    </bean>

    <bean id="sonnet29" class="ru.tyunikovag.springinaction.springidol.Sonnet29"/>

    <bean id="poeticDuke" class="ru.tyunikovag.springinaction.springidol.PoeticJuggler">
        <constructor-arg value="7"/>
        <constructor-arg ref="sonnet29"/>
    </bean>

    <bean id="piano" class="ru.tyunikovag.springinaction.springidol.Piano"/>

    <bean id="kenny" class="ru.tyunikovag.springinaction.springidol.Instrumentalist">
        <property name="song" value="Yellow submarine"/>
        <property name="instrument" ref="piano"/>
    </bean>

</beans>